<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/recordlist_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10-01-2020"
        android:textColor="#3E3D3D"
        android:textSize="21sp"
        app:layout_constraintBottom_toTopOf="@+id/recordlist_cat_linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.019"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.291" />

    <LinearLayout
        android:id="@+id/recordlist_cat_linearLayout"
        android:layout_width="253dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/recordlist_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food"
            android:textSize="19sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/recordlist_amnt_linearLayout"
        android:layout_width="72dp"
        android:layout_height="42dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="23dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toEndOf="@+id/recordlist_cat_linearLayout"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/recordlist_amnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="-10"
            android:textSize="19sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>